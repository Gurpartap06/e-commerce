{
  "openapi": "3.0.0",
  "info": {
    "title": "User & Product API",
    "version": "1.0.0",
    "description": "API documentation for User Authentication and Product Management"
  },
  "servers": [
    { "url": "/" }
  ],
  "paths": {
    "/signup": {
      "post": {
        "summary": "Create new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SignupRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "New user created" },
          "500": { "description": "Email already exists" }
        }
      }
    },

    "/login": {
      "post": {
        "summary": "Login using email + password & send OTP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "OTP sent" },
          "404": { "description": "Invalid credentials" }
        }
      }
    },

    "/verify-otp": {
      "post": {
        "summary": "Verify OTP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/VerifyOtpRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "OTP verified" },
          "401": { "description": "Invalid OTP" }
        }
      }
    },

    "/api/productApi/productCreate": {
      "post": {
        "summary": "Create product",
        "tags": ["Product"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Product" }
            }
          }
        },
        "responses": {
          "201": { "description": "Product created" },
          "400": { "description": "Duplicate product" }
        }
      }
    },

    "/api/productApi/productCheck/{id}": {
      "get": {
        "summary": "Get product by ID",
        "tags": ["Product"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Product found" },
          "404": { "description": "Product not found" }
        }
      }
    },

    "/api/productApi/updatedProduct/{id}": {
      "patch": {
        "summary": "Update product",
        "tags": ["Product"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Product" }
            }
          }
        },
        "responses": {
          "200": { "description": "Product updated" },
          "404": { "description": "Product not found" }
        }
      }
    },

    "/api/productApi/productDelete/{id}": {
      "delete": {
        "summary": "Delete product",
        "tags": ["Product"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Product deleted" }
        }
      }
    },

    "/api/productApi/getAll": {
      "get": {
        "summary": "Get all products",
        "tags": ["Product"],
        "responses": {
          "200": { "description": "All products" }
        }
      }
    },

    "/api/productApi/searchbybrand": {
      "get": {
        "summary": "Search product by brand",
        "tags": ["Product"],
        "parameters": [
          { "name": "brand", "in": "query", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Products found" }
        }
      }
    },

    "/api/productApi/upload-avatar/{id}": {
      "post": {
        "summary": "Upload product avatar",
        "tags": ["Product"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatar": { "type": "string", "format": "binary" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Avatar uploaded" }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "SignupRequest": {
        "type": "object",
        "required": ["username", "password", "email"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "email": { "type": "string" }
        }
      },

      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },

      "VerifyOtpRequest": {
        "type": "object",
        "required": ["email", "otp"],
        "properties": {
          "email": { "type": "string" },
          "otp": { "type": "string" }
        }
      },

      "Product": {
        "type": "object",
        "required": ["brand", "description", "price", "oldPrice"],
        "properties": {
          "brand": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "string" },
          "oldPrice": { "type": "string" },
          "avatar": { "type": "string" }
        }
      }
    }
  }
}
